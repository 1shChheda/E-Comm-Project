    "version": "0.2.0",
    "configurations": [
        {
            "type": "node",
            "request": "launch",
            "name": "Launch Program",
            "skipFiles": [
                "<node_internals>/**"
            ],
            "program": "${workspaceFolder}\\app.js",
            "restart": true, // to automatically restart the application when changes are detected
            "runtimeExecutable": "nodemon", // NOTE: This will use `Global` Nodemon
            "console":"integratedTerminal" // when debugging starts, the output will be displayed in `Terminal` window itself
        }
    ]
}