<%- include('../layouts/head.ejs') %>
    <link rel="stylesheet" href="/css/product.css">
    </head>

<body>
    <%- include('../layouts/navbar.ejs') %>

    <main>
        <% if (errorMessage.length > 0) { %>
            <div class="user-message user-message--error">
                <i class="fas fa-exclamation-circle"></i> <%= errorMessage %>
            </div>
        <% } %>
        <% if (successMessage.length > 0) { %>
            <div class="user-message user-message--success">
                <i class="fas fa-check-circle"></i> <%= successMessage %>
            </div>
        <% } %>

        <!-- Logo Section -->
        <section class="logo-section centered">
            <img src="/img/vanshify-logo2.png" alt="Vanshify Logo" class="logo-image">
        </section>
        
        <!-- Product Image Carousel -->
        <section class="product-carousel">
            <div class="product-carousel__slides">
                <% for (let i = 0; i < prods.length; i++) { %>
                    <div class="product-carousel__slide">
                        <article class="card product-item">
                            <div class="card__image">
                                <img src="<%= prods[i].imageUrl %>" alt="<%= prods[i].title %>">
                            </div>
                            <div class="card__content">
                                <h1 class="product__title"><%= prods[i].title %></h1>
                            </div>
                        </article>
                    </div>
                <% } %>
            </div>
            <div class="carousel-controls">
                <button class="carousel-control prev"> &lt; </button>
                <button class="carousel-control next"> &gt; </button>
            </div>
        </section>              
    </main>
<%- include('../layouts/end.ejs') %>